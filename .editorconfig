# http://editorconfig.org
# Consistent coding style across different editors.

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{diff,patch,md}]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_size = tab
indent_style = tab
